{
  "compilerOptions": {
    "outDir": "lib",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    //"jsx": "react",
    //"allowJs": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node", "jest"],
